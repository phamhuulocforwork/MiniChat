<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.6" fx:controller="minichat.ChatController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox spacing="10">
        <TextField fx:id="usernameField" promptText="Tên" HBox.hgrow="ALWAYS" />
        <TextField fx:id="roomCodeField" promptText="Mã phòng (6 chữ số)" HBox.hgrow="ALWAYS" />
        <Button onAction="#onJoinRoomClick" text="Vào phòng" />
    </HBox>

    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS" />

    <HBox spacing="10">
        <TextField fx:id="messageField" promptText="Nhập..." HBox.hgrow="ALWAYS" />
        <Button onAction="#onSendClick" text="Gửi" />
    </HBox>
</VBox>
